{
  "manifest_version": 3,
  "name": "HyperEVM Gwei Tracker",
  "version": "1.0",
  "description": "Displays gas price on HyperEVM",
  "permissions": ["action"],
  "permissions": ["alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
